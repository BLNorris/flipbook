<div id="main" class="clearfix">
  
  <div id="main_left">
    
    
    <div id="tagline">
        <div id="logo">
          <img src="assets/logo.jpg" alt="flipbook" height="150" width="300">
        </div>
        
    </div>
  
    <div id="signup">
        <div id="hp_form">
          <% if !current_user %>
            <%= render :partial => "form" %>
          <% else %>
            <p><%= current_user.name %>,<%= link_to("see your flipbooks >", user_url(current_user.id)) %></p>
          <% end %>
        </div> 
    </div>
  </div>
  
  <div id="main_right">
    <div id="hp_flipbk">
      <video autoplay loop>
          <source src="videos/Rolling.mp4" type="video/mp4">
           Your browser doesnâ€™t support this video. Consider downloading Chrome.
      </video>
    </div>
  </div>
  
</div>
  
  <div id="midline">
    <h3>Discover our flipbooks</h3>
  </div>

  <div id="hp_public_fbs" class="clearfix">
    <div id="public_fbs">

      <% @public_flipbks.each do |f| %>
        <li class="flipbook">
          
          <a href="<%= flipbk_path(f.id) %>">
            <img src="<%= f.photos.all.first.url %>" width="212" height="212"></img>

          </a>
        </li>
      <% end %>
    </div>
  </div>

